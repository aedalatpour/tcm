<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">
    <Tools.RoundedCornerImageView
        android:id="@+id/imgvPicture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_name4"/>
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/element_margin"
        android:paddingLeft="8dp"
        android:gravity="right"
        android:layout_toLeftOf="@id/imgvPicture"
        android:text="teststs"/>
    <TextView
        android:id="@+id/txtSmallTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:paddingLeft="8dp"
        android:gravity="right"
        android:layout_below="@id/txtTitle"
        android:layout_marginRight="@dimen/element_margin"
        android:layout_toLeftOf="@id/imgvPicture"
        android:text="teststs"/>
    <CheckBox
        android:id="@+id/chk_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
</RelativeLayout>