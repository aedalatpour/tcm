<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_itemperson_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/element_margin"
        android:paddingBottom="@dimen/element_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="0"/>
    <TextView
        android:id="@+id/txt_itemperson_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/element_margin"
        android:paddingBottom="@dimen/element_margin"
        android:layout_marginRight="@dimen/activity_content_right"
        android:gravity="right"
        android:textDirection="rtl"
        android:text="sample"/>

</LinearLayout>