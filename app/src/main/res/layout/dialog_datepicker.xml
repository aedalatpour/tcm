<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/lyt_datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">


    <NumberPicker
        android:id="@+id/npk_datepicker_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></NumberPicker>
    <NumberPicker
        android:id="@+id/npk_datepicker_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/element_margin"
        ></NumberPicker>
    <NumberPicker
        android:id="@+id/npk_datepicker_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/element_margin"
        ></NumberPicker>

    </LinearLayout>
    <Button
        android:id="@+id/btn_datepicker_select"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/action_select"
        android:layout_below="@+id/lyt_datepicker"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>