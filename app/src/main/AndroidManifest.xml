<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edalat.android.travelcostsmanagement" >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PersonDefineActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SelectPersonActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TripDefineActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CostDefineActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TripDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PaymentDefineActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".BillActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
